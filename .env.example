# Telegram → Discord → Telegram Forwarding Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Telegram Bot API Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram API Credentials (from my.telegram.org)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Discord Bot Token (from Discord Developer Portal)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Admin User IDs (comma-separated Telegram user IDs)
ADMIN_USER_IDS=123456789,987654321

# Database Configuration
DATABASE_URL=sqlite:///forwarding_bot.db

# Session Encryption Key (optional, will be generated if not provided)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=forwarding_bot.log

# Worker Configuration
MAX_PAIRS_PER_WORKER=25
WORKER_TIMEOUT=300

# Rate Limiting
MESSAGE_RATE_LIMIT=30

# Feature Toggles
ENABLE_MEDIA_FORWARDING=true
ENABLE_STICKER_FORWARDING=true
ENABLE_POLL_FORWARDING=true

# File Size Limits (MB)
MAX_FILE_SIZE_MB=50